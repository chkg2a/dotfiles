#!/bin/bash

if [ $# -ne 1 ]; then
  echo "Usage : sync_server ser"
  echo "Usage : sync_server loc"
  exit 1
fi

if [ $1 == "ser" ] ; then
  rsync -avz d23cs140@nerist.server:/home/d23cs140/cppCodes ~/projects/college-programs/datasOnServer/
  rsync -avz d23cs140@nerist.server:/home/d23cs140/shellScripts ~/projects/college-programs/datasOnServer/
elif [ $1 == "loc" ]; then
  rsync -avz ~/projects/college-programs/datasOnServer/ d23cs140@nerist.server:/home/d23cs140/
else
  echo "Please enter correctly"
  echo "Usage : sync_server ser"
  echo "Usage : sync_server loc"
fi
